<%- include('layout') %>

<h2>Planowanie trening√≥w</h2>
<div class="planner">
    <h3>Kalendarz: <%= new Date().toLocaleString("pl-PL", { month: "long", year: "numeric" }) %></h3>
    <div class="calendar">
        <% calendar.forEach(day => { %>
            <div>
                <strong><%= day.date.getDate() %></strong>
                <% day.workouts.forEach(workout => { %>
                    <p><%= workout.type %> (<%= workout.duration %> min)</p>
                <% }) %>
            </div>
        <% }) %>
    </div>
</div>